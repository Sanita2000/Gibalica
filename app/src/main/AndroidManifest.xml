<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gibalica">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.hardware.camera2.full"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gibalica">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".HomeActivity">
        </activity>
        <activity
            android:name=".CompeteActivity"
            android:parentActivityName=".HomeActivity">
        </activity>
        <activity
            android:name=".DayNightActivity"
            android:parentActivityName=".HomeActivity">
        </activity>
        <activity
            android:name=".GuideActivity"
            android:parentActivityName=".HelloActivity">
        </activity>
        <activity
            android:name=".HelloActivity"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".HomeActivity"
            android:parentActivityName=".HelloActivity">
        </activity>
        <activity
            android:name=".TrainingActivity"
            android:parentActivityName=".HomeActivity">
        </activity>
        <activity
            android:name=".CompetingActivity"
            android:parentActivityName=".CompeteActivity">
        </activity>
        <activity android:name=".mlkitextensions.CameraXLivePreviewActivity" />
    </application>
    <uses-feature android:name="android.hardware.camera" />

</manifest>